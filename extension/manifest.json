{
  "manifest_version": 3,
  "name": "Zoho CRM Data Extractor",
  "version": "1.0",
  "permissions": ["tabs", "storage", "scripting"],
  "host_permissions": ["https://crm.zoho.com/*"],
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://crm.zoho.com/*"],
      "js": ["content-script.js"]
    }
  ]
}
